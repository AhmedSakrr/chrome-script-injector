{
  "name": "Fanplayr Script Injector",
  "description": "Utility for injecting scripts into websites based on url patterns.",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "48": "icon48.png"
  },
  "manifest_version": 2
}
